---
import DarkModeToggle from './DarkModeToggle.astro';
import light from "../assets/logo/yunigate_sans_slogan_light.png"
import dark from "../assets/logo/yunigate_sans_slogan_dark.png"

---

<header x-data="{ isOpen: false, isScrolled: false }" 
        x-init="window.addEventListener('scroll', () => { isScrolled = window.scrollY > 20 })"
        :class="isScrolled ? 'bg-white/90 dark:bg-secondary-900/90 backdrop-blur-md shadow-md py-3' : 'py-5'"
        class="fixed w-full top-0 left-0 z-50 transition-all duration-300">
  <div class="container mx-auto px-4 md:px-6">
    <nav class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-2">
                <img 
                    :src="light" 
                    alt="YuniGate" 
                    class="h-24 w-24 block dark:hidden" 
                />
                <img 
                    :src="dark"
                    alt="YuniGate" 
                    class="h-24 w-24 hidden dark:block" 
                />
            </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-8">
        <ul class="flex gap-6">
          <li><a href="/" class="text-secondary-800 dark:text-white hover:text-primary-500 dark:hover:text-primary-400 font-medium transition-colors">Accueil</a></li>
          <li><a href="/services" class="text-secondary-800 dark:text-white hover:text-primary-500 dark:hover:text-primary-400 font-medium transition-colors">Services</a></li>
        <!--   <li><a href="/universites" class=" hidden text-secondary-800 dark:text-white hover:text-primary-500 dark:hover:text-primary-400 font-medium transition-colors">Universités</a></li>
          --> <li><a href="/a-propos" class="text-secondary-800 dark:text-white hover:text-primary-500 dark:hover:text-primary-400 font-medium transition-colors">À propos</a></li>
          <li><a href="/faq" class="text-secondary-800 dark:text-white hover:text-primary-500 dark:hover:text-primary-400 font-medium transition-colors">FAQ</a></li>
          <li><a href="/blog" class=" hidden text-secondary-800 dark:text-white hover:text-primary-500 dark:hover:text-primary-400 font-medium transition-colors">Blog</a></li>
        </ul>
        <div class="flex items-center gap-4">
          <DarkModeToggle />
          <a href="/contact" class="inline-flex items-center px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg font-medium transition-colors">
            Nous contacter
          </a>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <div class="lg:hidden flex items-center gap-4">
        <DarkModeToggle />
        <button @click="isOpen = !isOpen" class="p-2 text-secondary-900  dark:text-white">
          <svg x-show="!isOpen" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg x-show="isOpen" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </nav>

    <!-- Mobile Navigation -->
    <div x-show="isOpen" 
         x-transition:enter="transition ease-out duration-200" 
         x-transition:enter-start="opacity-0 -translate-y-4" 
         x-transition:enter-end="opacity-100 translate-y-0"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 translate-y-0" 
         x-transition:leave-end="opacity-0 -translate-y-4" 
         class="lg:hidden mt-4 bg-white dark:bg-secondary-800 rounded-lg shadow-lg p-4">
      <ul class="flex flex-col gap-3">
        <li><a @click="isOpen = false" href="/" class="block py-2 px-4 hover:bg-primary-50 dark:hover:bg-secondary-700 rounded-md">Accueil</a></li>
        <li><a @click="isOpen = false" href="/services" class="block py-2 px-4 hover:bg-primary-50 dark:hover:bg-secondary-700 rounded-md">Services</a></li>
        <li><a @click="isOpen = false" href="/universites" class="block py-2 px-4 hover:bg-primary-50 dark:hover:bg-secondary-700 rounded-md">Universités</a></li>
        <li><a @click="isOpen = false" href="/a-propos" class="block py-2 px-4 hover:bg-primary-50 dark:hover:bg-secondary-700 rounded-md">À propos</a></li>
        <li><a @click="isOpen = false" href="/faq" class="block py-2 px-4 hover:bg-primary-50 dark:hover:bg-secondary-700 rounded-md">FAQ</a></li>
        <li><a @click="isOpen = false" href="/blog" class="block py-2 px-4 hidden hover:bg-primary-50 dark:hover:bg-secondary-700 rounded-md">Blog</a></li>
        <li><a @click="isOpen = false" href="/contact" class="block py-2 px-4 bg-primary-500 text-white hover:bg-primary-600 rounded-md">Nous contacter</a></li>
      </ul>
    </div>
  </div>
</header>

<style>
  a {
    text-decoration: none;
  }
</style>